@model AgriculturePresentation.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenleme Sayfası</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label>

                    <input type="email" class="form-control" id="exampleInputName1" placeholder="Mail Adresinizi Giriniz" asp-for="mail">
                </div>
                <div class="form-group">
                    <label>Telefon Numarası</label>

                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Telefon numaranızı giriniz" asp-for="phone">
                </div>

                <div class="form-group">
                    <label>Şifreniz</label>

                    <input type="password" class="form-control" id="exampleInputEmail3" placeholder="Şifrenizi giriniz" asp-for="password">
                </div>

                <div class="form-group">
                    <label >Şifre Tekrarı</label>

                    <input type="password" class="form-control" id="exampleInputEmail3" placeholder="Şifrenizi tekrar giriniz" asp-for="confirmPassword">
                </div>



                <br />
                <button type="submit" class="btn btn-outline-info">Kaydet</button>

            </form>
        </div>
    </div>
</div>

















